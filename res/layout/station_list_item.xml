<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    tools:context=".HomeActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/stationItemBrandNameIV"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/station_placeholder" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="5dp" >

            <TextView
                android:id="@+id/stationItemNameTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/stationItembrandNameTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/stationListItemPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

	            <TextView
	                android:id="@+id/stationItemDistanceTV"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content" />
	            
	            <TextView
	                android:id="@+id/stationItemUpdatedAtTV"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:gravity="right" />
                
            </LinearLayout>
            
        </LinearLayout>

    </LinearLayout>
	
</LinearLayout>